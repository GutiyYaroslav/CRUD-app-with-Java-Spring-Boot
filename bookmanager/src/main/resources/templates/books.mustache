<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Title</title>
    <style>
        table, th, td {
            border: 1px solid black;
            padding: 5px 25px;
            border-collapse: collapse;
        }
    </style>
</head>
<body>
    <h1>Book list</h1>
    <div>
        <table>
            <tr>
                <th>Book title</th>
                <th>Book author</th>
                <th>Book price</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            {{#listBooks}}
                <tr>
                    <td><a href="bookdata/{{id}}">{{bookTitle}}</a></td>
                    <td>{{bookAuthor}}</td>
                    <td>{{bookPrice}}</td>
                    <td><a href="edit/{{id}}">Edit</a></td>
                    <td><a href="remove/{{id}}">Delete</a></td>
                </tr>
            {{/listBooks}}
        </table>
    </div>
    <br>
    <h3>add/save book</h3>

    <form action="/books/add" method="post">

        <input type="hidden" name="id" value="{{book.id}}">
        <label for="bookTitle">Book title  </label>
        <input type="text" name="bookTitle" value="{{book.bookTitle}}"><br><br>

        <label for="bookAuthor">Book author  </label>
        <input type="text" name="bookAuthor" value="{{book.bookAuthor}}"><br><br>

        <label for="bookPrice">Book price  </label>
        <input type="text" name="bookPrice" value="{{book.bookPrice}}"><br><br>

        <button tupe="submit">add/save</button>
    </form>


</body>
</html>